= "EPSILON" 0.000001

= "a" 1.0
= "b" / 1.0 sqrt 2.0
= "t" / 1.0 4.0
= "p" 1.0

while fn(_) > abs - a b EPSILON;' fn(_)
	= "previous_a" a
	:= "a" / + previous_a b 2.0
	:= "b" sqrt * previous_a b
	:= "t" - t * p * - a previous_a - a previous_a
	:= "p" * 2.0 p
;'

= "pi" * + a b / + a b * 4.0 t

print concat "Pi = " concat to_str pi ".\n"
