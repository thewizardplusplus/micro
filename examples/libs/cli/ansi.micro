let ANSI_CODES
	nb styles
	#"bold" "1"
	#"dim" "2"
	#"italic" "3"
	#"underline" "4"
	#"strikethrough" "9"

	nb colors
	#"black" "30"
	#"red" "31"
	#"green" "32"
	#"yellow" "33"
	#"blue" "34"
	#"magenta" "35"
	#"cyan" "36"
	#"white" "37"
	#"gray" "90"
{};

fn ansi(name text)
	let code .? name ANSI_CODES name;
	+ "\x1b[" + code + "m" + text "\x1b[m"
;
