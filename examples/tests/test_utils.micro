let ANSI_CODES
	#"bold" "1"
	#"red" "31"
	#"green" "32"
{};

fn ansi(code text)
	+ "\x1b[" + . code ANSI_CODES + "m" + text "\x1b[m"
;

fn test(name result)
	outln
		+ ansi "bold" name
		+ " "
		if result
			fn() ansi "green" "[SUCCESS]";
			fn() ansi "red" "[FAILURE]";
;

let exports
	#"test" fn(name result)
		test name result
	;
{};
