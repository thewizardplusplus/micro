nb http://rosettacode.org/wiki/Conway%27s_Game_of_Life

let ansi:2 load "std/cli/ansi";

let Point:2 load "Point";
let Rectangle:2 load "Rectangle";
let run_life:3 load "run_life";

let rectangle Rectangle Point 0 0 Point 10 10;
nb glider
let points , Point 0 8 , Point 1 8 , Point 2 8 , Point 2 9 , Point 1 10 [];
run_life rectangle points fn(is_alive)
	out
		if is_alive
			fn() ansi "bold" ansi "white" "#";
			fn() ansi "black" ".";
;
